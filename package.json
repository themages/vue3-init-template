{
  "name": "vue3-init-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host --mode dev",
    "test": "run-p type-check build-test",
    "prod": "run-p type-check build-prod",
    "build-test": "vite build --mode test",
    "build-prod": "vite build --mode prod",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint:eslint": "eslint --fix --ext .ts,.tsx,.js,.jsx,.vue src",
    "preinstall": "npx -y pnpm",
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "author": "曾星旗 <me@zengxingqi.com> (https://canicode.cn/)",
  "engines": {
    "node": ">=16.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/themages/vue3-init-template.git"
  },
  "dependencies": {
    "@vueuse/core": "^9.9.0",
    "axios": "^1.2.2",
    "dayjs": "^1.11.7",
    "lodash": "^4.17.21",
    "pinia": "^2.0.28",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/lodash": "^4.14.191",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.57.1",
    "tailwindcss": "^3.2.4",
    "typescript": "*",
    "vite": "^4.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-inspect": "^0.7.12",
    "vue-tsc": "^1.0.11"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "pnpm run lint:eslint"
    ]
  }
}
